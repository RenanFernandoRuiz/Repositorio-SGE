@model SGE.Models.TipoOcorrencia

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TipoOcorrencia</h4>
<hr />
<div class="row" style="display:flex; justify-content:center; ">
    <div id="custom-form" style="display: flex; justify-content: center; background-color:#ECECEC; border-color: #FACC2E; border-radius:2rem; width:350px;">
        <div id="custom-form" class="col-md-4" style="display: flex; justify-content: center;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TipoOcorrenciaId" />
                <div class="form-group">
                    <label asp-for="TipoOcorrenciaNome" class="control-label" style="margin-top:10px;"></label>
                    <input asp-for="TipoOcorrenciaNome" class="form-control" />
                    <span asp-validation-for="TipoOcorrenciaNome" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="CadAtivo" /> @Html.DisplayNameFor(model => model.CadAtivo)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="CadInativo" class="control-label"></label>
                    <input asp-for="CadInativo" class="form-control" />
                    <span asp-validation-for="CadInativo" class="text-danger"></span>
                </div>
                <div id="btCreat" class="form-group" style="margin-top:10px;margin-bottom:10px;">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
